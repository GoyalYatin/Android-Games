<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".CustomerLoginRegisterActivity">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:text="SYS CAB APP" />

    <TextView
        android:id="@+id/text_view_customer_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_below="@id/text_view_title"
        android:layout_marginTop="70dp"
        android:text="Customer Login" />

    <EditText
        android:id="@+id/edit_customer_text_email"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginStart="10pt"
        android:padding="5pt"
        android:background="@color/colorTextBox"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_below="@+id/text_view_customer_login"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/edit_customer_text_password"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginEnd="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginStart="10pt"
        android:padding="5pt"
        android:background="@color/colorTextBox"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_customer_text_email" />

    <Button
        android:id="@+id/button_customer_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/edit_customer_text_password"/>

    <TextView
        android:id="@+id/text_view_customer_registration_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/button_customer_login"
        android:layout_marginTop="5dp"
        android:text="Don't have an account?" />

    <Button
        android:id="@+id/button_customer_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_dark"
        android:text="Register"
        android:padding="10sp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_below="@+id/text_view_customer_registration_link"/>

</RelativeLayout>